{
  "name": "vscode-qlik",
  "version": "0.0.2",
  "description": "vscode extension for qlik",
  "main": "./dist/extension.js",
  "publisher": "q-masters",
  "scripts": {
    "copyhtml": "copyfiles ./projects/extension/**/*.html ./out",
    "clear": "rimraf ./out",
    "compile": "npm run build -- --skipLibCheck",
    "watch": "npm run build -- -watch -p ./",
    "prebuild": "npm run clear && npm run copyhtml",
    "build": "npm run webpack",
    "webpack": "webpack --config ./bin/webpack.conf.js --mode production",
    "postinstall": "npm i --prefix ./projects/media/webview",
    "postbuild": "npm run webview:build",
    "webview:build": "npm run build --prefix ./projects/media/webview -- --prod",
    "webview:dev": "npm start --prefix ./projects/media/webview -- --configuration browser",
    "changelog:compile": "tsc -p ./ci",
    "changelog:generate": "node ./dist/ci/changelog",
    "vscode:prepublish": "npm run build",
    "lint:extension": "node bin/eslint-reporter './projects/extension/**/*.ts'",
    "lint:webview": "npm run lint --prefix ./projects/media/webview",
    "vsce:publish": "./node_modules/.bin/vsce publish",
    "test": "mocha --reporter spec -r ts-node/register  -r tsconfig-paths/register ./test/**/*.spec.ts",
    "test:watch": "npm test -- --watch --watch-files test --watch-files extension --watch-files core"
  },
  "engines": {
    "vscode": "1.45.1"
  },
  "activationEvents": [
    "onFileSystem:qix",
    "onCommand:VsQlik.Connection.Settings",
    "onCommand:VsQlik.Connection.Create"
  ],
  "contributes": {
    "commands": [
      {
        "command": "VsQlik.Connection.Create",
        "title": "Connect to Qlik Server",
        "category": "VSQlik"
      },
      {
        "command": "VsQlik.Connection.Settings",
        "title": "Show Connection Settings",
        "category": "VsQlik"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "VsQlik.Connection.Create",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Visual Studio Qlik",
        "properties": {
          "VsQlikSettings.WorkspaceFolders": {
            "title": "A list of file locations to load SSH FS configurations from",
            "description": "Location of JSON files to load configs from",
            "type": "array",
            "items": true,
            "default": [
              {
                "label": "Localhost",
                "connection": {
                  "host": "127.0.0.1",
                  "path": null,
                  "port": null,
                  "secure": true,
                  "allowUntrusted": false,
                  "authorization": {
                    "strategy": 1,
                    "data": {
                      "domain": "",
                      "password": ""
                    }
                  }
                },
                "renderer": 1
              }
            ]
          }
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PLH-Coding/vscodeQ.git"
  },
  "author": "phl-coding",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PLH-Coding/vscodeQ/issues"
  },
  "homepage": "https://github.com/PLH-Coding/vscodeQ#readme",
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/enigma.js": "2.2.1",
    "@types/node": "14.0.5",
    "@types/qlik-engineapi": "12.67.9",
    "@types/sinon": "^9.0.4",
    "@types/vscode": "1.45.1",
    "@types/ws": "7.2.4",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "chai": "4.2.0",
    "chalk": "4.0.0",
    "copyfiles": "2.3.0",
    "eslint": "7.1.0",
    "html-loader": "1.1.0",
    "minimist": "1.2.5",
    "mocha": "7.2.0",
    "sinon": "^9.0.2",
    "ts-loader": "7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "6.1.2",
    "typescript": "3.9.3",
    "vsce": "1.75.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "dependencies": {
    "enigma.js": "2.7.1",
    "object-hash": "2.0.3",
    "reflect-metadata": "^0.1.13",
    "request": "2.88.2",
    "rimraf": "3.0.2",
    "tsyringe": "^4.3.0",
    "ws": "7.3.0",
    "yaml": "1.10.0"
  }
}
