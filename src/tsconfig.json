{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "experimentalDecorators": true,
    "paths": {
      "@data/*": ["./extension/data/*"],
      "@utils" : ["./extension/utils"],
      "@lib/enigma" : ["extension/libs/enigma"],
      "@lib/qixfs": ["extension/libs/qixfs"],
      "@lib/settings" : ["extension/libs/settings"],
      "@lib/connection" : ["extension/libs/connection"],
      "@lib/stepper": ["extension/libs/stepper"],
    }
  },
  "exclude": [
    "node_modules",
    "media/webview",
    "bin"
  ]
}
