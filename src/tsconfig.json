{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "experimentalDecorators": true,
    "paths": {
      "@extension/utils" : ["./extension/utils"],
      "@extension/utils/*" : ["./extension/utils/src/*"],
      "@extension/enigma"  : ["./extension/enigma"],
      "@extension/enigma/*": ["./extension/enigma/src/*"],
      "@qixfs-entry": ["./extension/qixfs-entry"],
      "@qixfs/*": ["./extension/qixfs/src/*"],
      "@qixfs/utils/*": ["./extension/qixfs/src/utils/src/*"],
      "@settings/utils" : ["extension/settings/utils"],
      "@settings/model/*" : ["extension/settings/model/*"],
      "@settings/webview/*" : ["extension/settings/webview/*"],
    }
  },
  "exclude": ["node_modules"]
}
